{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "declaration": false,
    "removeComments": true,
    "noLib": false,
    "lib": ["es2015", "es2015.iterable", "dom"],
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "~/*": ["client/*"]
    },
    "types": [
      "@types/node",
      "@nuxt/vue-app",
      "@types/jest"
    ]
  },
  "include": [
    "server/**/*",
    "client/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
